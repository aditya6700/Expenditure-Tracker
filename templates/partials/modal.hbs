<div class="container">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            Add Expense
        </button>
    </div>
    <!-- Button trigger modal -->
    
   <!-- Modal -->
    <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered"> 
            <div class="modal-content">
            <form id="expenseFrom" method="POST" action="/expense">
                <div class="modal-header">
                    <h5 class="modal-title" id="staticBackdropLabel">Expense Details</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                
                <div class="modal-body">
                    <div class="row mb-3">
                        <label for="reasonToPay" class="col-sm-2 col-md-4 col-form-label">Reason to Pay</label>
                        <div class="col-sm-10 col-md-8">
                            <input type="text" name="reason" class="form-control" id="reasonToPay" placeholder="Food" required>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="PadiTo" class="col-sm-2 col-md-4 col-form-label">Paid To</label>
                        <div class="col-sm-10 col-md-8">
                            <select class="form-select" name="paidTo" id="PadiTo" required>
                                <option value="">Choose...</option>
                                <option value="self" >Self</option>
                                <option value="others" >Others</option>
                            </select>
                        </div>
                    </div>
                    

                    <div class="row mb-3">
                        <label for="payeeName" class="col-sm-2 col-md-4 col-form-label">Name</label>
                        <div class="col-sm-10 col-md-8">
                            <input type="text" name="name" class="form-control" id="payeeName" placeholder="Gadalf">
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="paymentType" class="col-sm-2 col-md-4 col-form-label">Payment Type</label>
                        <div class="col-sm-10 col-md-8">
                            <select class="form-select" name="paymentType" id="paymentType" required>
                                <option value="">Choose...</option>
                                <option value="PayTm" >PayTm</option>
                                <option value="PhonePay" >PhonePay</option>
                                <option value="GPay" >GPay</option>
                                <option value="Cash" >Cash</option>
                                <option value="Others" >Others</option>
                            </select>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <label for="amountPaid" class="col-sm-2 col-md-4 col-form-label">Amount</label>
                        <div class="col-sm-10 col-md-8">
                            <input type="number" name="amount" min="0.00" max="10000.00" step="1.00"  class="form-control" id="amountPaid" placeholder="500" required>
                        </div>
                    </div> 
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Discard</button>
                    <button type="submit" class="btn btn-primary">Add</button>
                </div>
            </form>          
            </div>
        </div>
    </div>